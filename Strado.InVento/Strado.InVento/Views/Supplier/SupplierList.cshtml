@model IEnumerable<Strado.InVento.Core.Models.Suppliers>
@{
    ViewBag.Title = "SupplierList";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Parts List

        </h1>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Parts Lists</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Supplier Name</th>
                                    <th>Contact Name</th>
                                    <th>Contact No</th>
                                    <th>Address1</th>
                                    <th>Address2</th>
                                    <th>City</th>
                                    <th>State</th>
                                    <th>Pin</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var supplier in Model)
                                {
                                    <tr>
                                        <td>@supplier.SupplierName</td>
                                        <td>@supplier.Address.ContactName</td>
                                        <td>@supplier.Address.ContactNo</td>
                                        <td>@supplier.Address.Address1</td>
                                        <td>@supplier.Address.Address2</td>
                                        <td>@supplier.Address.City</td>
                                        <td>@supplier.Address.State</td>
                                        <td>@supplier.Address.Pin</td>
                                        <td><a class="btn btn-block btn-info btn-xs" href="@Url.Action("Edit","Supplier", new { id=supplier.Id})">Edit</a></td>
                                        <td>
                                            <a href="#" class="js-delete-supplier btn btn-block btn-danger btn-xs" data-supplier-id="@supplier.Id" data-toggle="modal">
                                                Delete
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Supplier Name</th>
                                    <th>Contact Name</th>
                                    <th>Contact No</th>
                                    <th>Address1</th>
                                    <th>Address2</th>
                                    <th>City</th>
                                    <th>State</th>
                                    <th>Pin</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@section scripts
{
    <script>

        $(document).ready(function () {
            $(".js-delete-supplier").click(function (e) {
                var link = $(e.target);
                bootbox.dialog({
                    message: "Are you sure you want to delete this brand?",
                    title: "Confirm",
                    buttons: {
                        no: {
                            label: "No",
                            ClassName: "btn-default",
                            callback: function () {
                                bootbox.hideAll();
                            }
                        },
                        yes: {
                            label: "Yes",
                            className: "btn-danger",
                            callback: function () {
                                $.ajax({
                                    url: "/api/supplier/" + link.attr("data-supplier-id"),
                                    method: "DELETE"
                                })

                            .done(function () {
                                link.parents("tr").fadeOut(function () {
                                    $(this).remove();
                                });
                            })
                            .fail(function () {
                                alert("Somthing failed!");
                            });
                            }
                        }
                    }
                });
            });
        });
    </script>

}

